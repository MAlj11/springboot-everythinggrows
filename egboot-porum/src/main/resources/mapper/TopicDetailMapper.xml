        `tid` bigint(20) DEFAULT NULL,
        `content` varchar(500) DEFAULT NULL,
        `toUid` bigint(20) DEFAULT NULL,
        `toUsername` varchar(50) DEFAULT NULL,
        `toPortrait` varchar(50) DEFAULT NULL,
